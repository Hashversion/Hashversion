{
  "name": "hashversion",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "commitlint": "commitlint --edit",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "prettier:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "prettier:format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "syncpack:fix": "syncpack fix",
    "syncpack:format": "syncpack format",
    "syncpack:format-check": "syncpack format --check",
    "syncpack:lint": "syncpack lint"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@hashversion/typescript-config": "workspace:*",
    "@types/node": "^24.0.14",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "syncpack": "^14.0.0-alpha.18",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=20"
  }
